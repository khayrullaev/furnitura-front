{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es6"],
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "baseUrl": ".",
    "moduleResolution": "node",
    "module": "commonjs",
    "noImplicitAny": false,
    "paths": {
      "components/*": ["./src/components/*"],
      "navigation/*": ["./src/navigation/*"],
      "screens/*": ["./src/screens/*"],
      "styles/*": ["./src/styles/*"],
      "utils/*": ["./src/utils/*"],
    },
    "typeRoots": [
      "./node_modules/@types",
      "./custom_typings"
    ],
  },
  "include": ["src", "/src/**/*",],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
  ]
}
